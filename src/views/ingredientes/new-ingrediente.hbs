<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Nuevo Ingrediente</h3>
        </div>
        <div class="card-body">
            <form action="/ingredientes/new-ingrediente" method="post">
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" placeholder="Nombre" autofocus>
                </div>
                <div class="form-group mt-4">
                    <textarea name="descripcion" class="form-control" placeholder="Descripcion"></textarea>
                </div>
                <br>
                <div class="form-group">
                    <input type="number" name="precio" class="form-control" placeholder="Precio">
                </div>
                <br>
                <div class="form-group">
                    <input type="number" name="cantidad" class="form-control" placeholder="Cantidad">
                </div>
                <br>
                <div>
                    <select name="unidadMedida" id="unidadMedida" style="border: none;">
                        <option value="TipoUnidad">TipoUnidad</option>
                        <option value="Gramos">Gramos</option>
                        <option value="Mililitros">Mililitros</option>
                    </select>
                </div>
                <hr>
                <div class="form-group mt-4">
                    <button class="btn btn-primary btn-block" type="submit" style="width: 100%;">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>